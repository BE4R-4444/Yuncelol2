{
  "version": 2,
  "builds": [
    {
      "src": "server.py",
      "use": "@vercel/python",
      "config": {
        "runtime": "python3.9",
        "wsgi": {
          "app": "app"  
        },
        "includeFiles": "templates/**"  
      }
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "/templates/$1"  
    },
    {
      "src": "/(.*)", 
      "dest": "server.py",
      "methods": ["GET", "POST"]  
    }
  ],
  "build": {
    "env": {
      "PYTHONUNBUFFERED": "1"  
    },
    "scripts": {
      "vercel-build": "cp quiz.db /tmp/quiz.db && pip install -r requirements.txt"
    }
  }
}
