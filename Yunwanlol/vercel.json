{
  "version": 2,
  "builds": [
    {
      "src": "*.py",
      "use": "@vercel/python",
      "config": { 
        "runtime": "python3.9",
        "flask": true  // 关键！明确告知这是Flask应用
      }
    }
  ],
  "routes": [
    {
      "src": "/.*",  // 通配所有路径
      "dest": "server.py"
    }
  ]
}
