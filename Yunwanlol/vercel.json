{
  "version": 2,
  "builds": [
    {
      "src": "server.py",
      "use": "@vercel/python",
      "config": {
        "flask": true,  
        "runtime": "python3.9",
        "maxLambdaSize": "15mb"
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)", 
      "dest": "server.py",
      "methods": ["GET", "POST", "OPTIONS"]  
    }
  ],
  "build": {
    "env": {
      "PYTHONUNBUFFERED": "1"  
  }
}
